    // iPads
    {name: "iPad Gen 10 2022", img: "https://encrypted-tbn0.gstatic.com/shopping?q=tbn:ANd9GcTVcJpg2rUmBDk028-nD1ULegcxLHjzuS5c4rsbBUQTNlMVUQClpY-waqAq3MhuFixWFQvhYMoj1uuxGYHe_M0y4ti7LQTsrH8_AkwMVRNUfuU6Kj0Qp2X9&usqp=CAE", price: "9.000.000‚Ç´", sale: false, category: "ipad"},

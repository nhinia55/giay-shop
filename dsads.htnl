    {name: "iPhone 13", img: "https://encrypted-tbn1.gstatic.com/shopping?q=tbn:ANd9GcTjZnK0VbdjTE0FRdklkBdqDHpA2RdiAsjcdWU7K4tzo5NQSmZYw3S2LbSIF7RsNVmsB_KfY-RVWHpCPNkidxl6BmdoAV5CkoaNpkjqfD966js7erjXjLuOPA&usqp=CAE", price: "17.000.000‚Ç´", sale: false, category: "iphone"},
